# Fluxa - Configuration Apache pour IONOS
# Gestion SPA React Router + vraies erreurs 404

# Sécurité : Désactiver l'affichage des répertoires
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si le fichier ou dossier existe, on le sert directement
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Sinon, on redirige vers index.html pour React Router
  RewriteRule ^(.*)$ /index.html [L]
</IfModule>

# Page d'erreur 404 personnalisée
ErrorDocument 404 /404.html

# Activer la compression Gzip (améliore la vitesse)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache navigateur pour performances (en-têtes Expires)
<IfModule mod_expires.c>
  ExpiresActive On

  # Par défaut : 1 mois
  ExpiresDefault "access plus 1 month"

  # Images : 1 an (ressources statiques qui ne changent pas)
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS et JavaScript : 1 an (Vite ajoute un hash dans le nom)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"

  # Polices : 1 an
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"

  # HTML : cache court (pour voir les changements rapidement)
  ExpiresByType text/html "access plus 1 hour"

  # JSON et XML : 1 jour
  ExpiresByType application/json "access plus 1 day"
  ExpiresByType application/xml "access plus 1 day"
  ExpiresByType text/xml "access plus 1 day"
</IfModule>

# En-têtes Cache-Control modernes (complète Expires)
<IfModule mod_headers.c>
  # Images, polices et médias : cache long + immutable
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|otf|mp4|webm)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # CSS et JS versionnés par Vite : cache long + immutable
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML : cache court + revalidation
  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>

  # En-têtes de sécurité (protection XSS, clickjacking, etc.)
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
